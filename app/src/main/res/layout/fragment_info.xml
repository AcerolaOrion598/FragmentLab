<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.InfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/deviceModelTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/device_model_text_view"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/androidVersionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/android_version_text_view"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/RAMTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ram_text_view"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ramImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/ram"
            android:src="@drawable/ram" />

        <TextView
            android:id="@+id/ramValueTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ram2ImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/ram2"
            android:src="@drawable/ram2" />

    </LinearLayout>

    <TextView
        android:id="@+id/IPAddressTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ip_address_text_view"
        android:textSize="24sp" />

</LinearLayout>